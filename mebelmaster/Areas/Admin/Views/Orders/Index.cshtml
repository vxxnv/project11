@model IEnumerable<Order>
@{
    ViewData["Title"] = "Просмотр заказов";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Просмотр заказов</h1>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Клиент</th>
                                <th>Телефон</th>
                                <th>Email</th>
                                <th>Товар</th>
                                <th>Статус</th>
                                <th>Дата создания</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td>@order.Id</td>
                                    <td>@order.CustomerName</td>
                                    <td>@order.Phone</td>
                                    <td>@(order.Email ?? "Не указан")</td>
                                    <td>
                                        @if (order.Product != null)
                                        {
                                            <span>@order.Product.Name</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Общий заказ</span>
                                        }
                                    </td>
                                    <td>
                                        @switch (order.Status)
                                        {
                                            case OrderStatus.New:
                                                <span class="badge bg-primary">Новый</span>
                                                break;
                                            case OrderStatus.InProgress:
                                                <span class="badge bg-warning">В работе</span>
                                                break;
                                            case OrderStatus.Completed:
                                                <span class="badge bg-success">Завершен</span>
                                                break;
                                            case OrderStatus.Cancelled:
                                                <span class="badge bg-danger">Отменен</span>
                                                break;
                                        }
                                    </td>
                                    <td>@order.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>
                                        <a href="/Admin/Orders/Details/@order.Id" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                                                Статус
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item" href="#" onclick="updateStatus(@order.Id, 0)">Новый</a></li>
                                                <li><a class="dropdown-item" href="#" onclick="updateStatus(@order.Id, 1)">В работе</a></li>
                                                <li><a class="dropdown-item" href="#" onclick="updateStatus(@order.Id, 2)">Завершен</a></li>
                                                <li><a class="dropdown-item" href="#" onclick="updateStatus(@order.Id, 3)">Отменен</a></li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">Заказов пока нет</h4>
                    <p class="text-muted">Здесь будут отображаться заказы от клиентов</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function updateStatus(orderId, status) {
            if (confirm('Вы уверены, что хотите изменить статус заказа?')) {
                $.post('/Admin/Orders/UpdateStatus', { id: orderId, status: status })
                    .done(function() {
                        location.reload();
                    })
                    .fail(function() {
                        alert('Ошибка при обновлении статуса');
                    });
            }
        }
    </script>
}