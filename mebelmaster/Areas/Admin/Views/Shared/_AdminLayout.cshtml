<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MebelMaster Admin</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        @{
                            var controller = ViewContext.RouteData.Values["Controller"]?.ToString();
                        }
                        
                        <li class="nav-item">
                            <a class="nav-link @(controller == "Dashboard" ? "active" : "")" href="/Admin/Dashboard">
                                <i class="fas fa-tachometer-alt me-2"></i>
                                Дашборд
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(controller == "Products" ? "active" : "")" href="/Admin/Products">
                                <i class="fas fa-couch me-2"></i>
                                Товары
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(controller == "Categories" ? "active" : "")" href="/Admin/Categories">
                                <i class="fas fa-list me-2"></i>
                                Категории
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(controller == "Orders" ? "active" : "")" href="/Admin/Orders">
                                <i class="fas fa-shopping-cart me-2"></i>
                                Заказы
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Добавьте jQuery перед Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_NotificationPartial" />
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>