@model Product
@{
    ViewData["Title"] = "Добавление товара";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Добавление товара</h1>
        <a href="/Admin/Products" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Назад к списку
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form method="post" asp-action="Create" enctype="multipart/form-data" id="test-form">
                        @Html.AntiForgeryToken()
                        
                        <!-- Добавьте этот блок для отладки -->
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                <h5>Ошибки валидации:</h5>
                                <ul>
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                </ul>
                            </div>
                        }
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <!-- Конец блока отладки -->
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label" asp-for="Name">Название товара *</label>
                                    <input type="text" class="form-control" asp-for="Name" value="Тестовый товар">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label" asp-for="Article">Артикул *</label>
                                    <input type="text" class="form-control" asp-for="Article" value="TEST-001">
                                    <span asp-validation-for="Article" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label" asp-for="Description">Описание *</label>
                            <textarea class="form-control" asp-for="Description">Тестовое описание</textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label" asp-for="Price">Цена *</label>
                                    <input type="number" class="form-control" asp-for="Price" value="1000" step="0.01">
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label" asp-for="CategoryId">Категория *</label>
                                    <select class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                                        <option value="">Выберите категорию</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Изображения товара</label>
                            <input type="file" class="form-control" name="images" multiple accept="image/*">
                            <div class="form-text">Можно выбрать несколько изображений</div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-check mb-3">
                                    <input type="checkbox" class="form-check-input" asp-for="IsPopular">
                                    <label class="form-check-label" asp-for="IsPopular">Популярный товар</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check mb-3">
                                    <input type="checkbox" class="form-check-input" asp-for="IsActive" checked>
                                    <label class="form-check-label" asp-for="IsActive">Активный</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-2"></i>Сохранить товар
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Подсказки</h5>
                </div>
                <div class="card-body">
                    <p class="small text-muted">
                        <strong>Название:</strong> Укажите полное название товара<br>
                        <strong>Артикул:</strong> Уникальный идентификатор товара<br>
                        <strong>Цена:</strong> Указывается в рублях<br>
                        <strong>Популярный:</strong> Будет отображаться на главной<br>
                        <strong>Активный:</strong> Товар виден в каталоге
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        console.log('Страница загружена');
        
        const categorySelect = document.querySelector('#CategoryId');
        if (categorySelect) {
            console.log('Элемент выбора категории найден');
            console.log('Количество опций:', categorySelect.options.length);
            
            // Выводим все доступные категории
            for (let i = 0; i < categorySelect.options.length; i++) {
                console.log(`Опция ${i}: value="${categorySelect.options[i].value}", text="${categorySelect.options[i].text}"`);
            }
            
            // Отслеживаем изменения выбора
            categorySelect.addEventListener('change', function() {
                console.log('Выбрана категория:', this.value, this.options[this.selectedIndex].text);
            });
        } else {
            console.error('Элемент выбора категории не найден!');
        }

        const form = document.getElementById('test-form');
        if (form) {
            form.addEventListener('submit', function(e) {
                console.log('=== ОТПРАВКА ФОРМЫ ===');
                
                const selectedCategory = categorySelect ? categorySelect.value : 'не найден';
                console.log('Выбранная категория при отправке:', selectedCategory);
                
                // Выводим все данные формы
                const formData = new FormData(this);
                console.log('Все данные формы:');
                for (let [key, value] of formData.entries()) {
                    console.log(`${key}: ${value}`);
                }
                
                // Проверяем, выбрана ли категория
                if (!selectedCategory || selectedCategory === '') {
                    console.error('Категория не выбрана!');
                    e.preventDefault(); // Останавливаем отправку для отладки
                    alert('Пожалуйста, выберите категорию!');
                }
            });
        }
    });
</script>