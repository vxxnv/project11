@model IEnumerable<Product>
@{
    ViewData["Title"] = "Управление товарами";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Управление товарами</h1>
        <a href="/Admin/Products/Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Добавить товар
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Изображение</th>
                                <th>Название</th>
                                <th>Артикул</th>
                                <th>Цена</th>
                                <th>Категория</th>
                                <th>Статус</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td>@product.Id</td>
                                    <td>
                                        @if (product.Images.Any())
                                        {
                                            <img src="@product.Images.First().ImageUrl" alt="@product.Name" style="width: 50px; height: 50px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="bg-light d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                                <i class="fas fa-couch text-muted"></i>
                                            </div>
                                        }
                                    </td>
                                    <td>@product.Name</td>
                                    <td>@product.Article</td>
                                    <td>@product.Price.ToString("C0")</td>
                                    <td>@product.Category?.Name</td>
                                    <td>
                                        @if (product.IsActive)
                                        {
                                            <span class="badge bg-success">Активен</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Неактивен</span>
                                        }
                                        @if (product.IsPopular)
                                        {
                                            <span class="badge bg-warning ms-1">Популярный</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="/Admin/Products/Edit/@product.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="/Admin/Products/Delete/@product.Id" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>       
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-couch fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">Товаров пока нет</h4>
                    <p class="text-muted">Добавьте первый товар в каталог</p>
                    <a href="/Admin/Products/Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Добавить товар
                    </a>
                </div>
            }
        </div>
    </div>
</div>