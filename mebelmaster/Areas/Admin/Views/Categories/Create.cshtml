@model Category
@{
    ViewData["Title"] = "Добавление категории";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Добавление категории</h1>
        <a href="/Admin/Categories" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Назад к списку
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form method="post" asp-action="Create">
                        @Html.AntiForgeryToken()
                        
                        <div class="form-group mb-3">
                            <label class="form-label">Название категории *</label>
                            <input type="text" class="form-control" asp-for="Name" required>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Описание</label>
                            <textarea class="form-control" asp-for="Description" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Родительская категория</label>
                            <select class="form-control" asp-for="ParentCategoryId">
                                <option value="">Без родительской категории</option>
                                @foreach (var category in ViewBag.ParentCategories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-2"></i>Сохранить категорию
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>