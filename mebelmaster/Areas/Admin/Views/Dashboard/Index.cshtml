@{
    ViewData["Title"] = "Админ-панель";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Админ-панель</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
                <button type="button" class="btn btn-sm btn-outline-secondary">Экспорт</button>
            </div>
        </div>
    </div>

    <!-- Статистика -->
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@ViewBag.TotalProducts</h4>
                            <p class="card-text">Товаров</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-couch fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@ViewBag.TotalOrders</h4>
                            <p class="card-text">Заказов</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-shopping-cart fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@ViewBag.NewOrders</h4>
                            <p class="card-text">Новых заказов</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-bell fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@ViewBag.TotalCategories</h4>
                            <p class="card-text">Категорий</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-tags fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Быстрые действия -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Быстрые действия</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a href="/Admin/Products/Create" class="btn btn-primary w-100">
                                <i class="fas fa-plus me-2"></i>Добавить товар
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="/Admin/Products" class="btn btn-outline-primary w-100">
                                <i class="fas fa-list me-2"></i>Управление товарами
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="/Admin/Categories" class="btn btn-outline-success w-100">
                                <i class="fas fa-tags me-2"></i>Управление категориями
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="/Admin/Orders" class="btn btn-outline-warning w-100">
                                <i class="fas fa-shopping-cart me-2"></i>Просмотр заказов
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Последние заказы -->
    @if (ViewBag.RecentOrders != null)
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Последние заказы</h5>
                    </div>
                    <div class="card-body">
                        @if (ViewBag.RecentOrders.Count > 0)
                        {
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Имя</th>
                                            <th>Телефон</th>
                                            <th>Товар</th>
                                            <th>Статус</th>
                                            <th>Дата</th>
                                            <th>Действия</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var order in ViewBag.RecentOrders)
                                        {
                                            <tr>
                                                <td>@order.Id</td>
                                                <td>@order.CustomerName</td>
                                                <td>@order.Phone</td>
                                                <td>@(order.Product?.Name ?? "Общая заявка")</td>
                                                <td>
                                                    @{
                                                        var statusClass = order.Status.ToString() == "New" ? "bg-warning" :
                                                                         order.Status.ToString() == "InProgress" ? "bg-info" :
                                                                         order.Status.ToString() == "Completed" ? "bg-success" :
                                                                         order.Status.ToString() == "Cancelled" ? "bg-danger" : "bg-secondary";
                                                        
                                                        var statusText = order.Status.ToString() == "New" ? "Новый" :
                                                                        order.Status.ToString() == "InProgress" ? "В работе" :
                                                                        order.Status.ToString() == "Completed" ? "Завершен" :
                                                                        order.Status.ToString() == "Cancelled" ? "Отменен" : "Неизвестно";
                                                    }
                                                    <span class="badge @statusClass">@statusText</span>
                                                </td>
                                                <td>@order.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                                <td>
                                                    <a href="/Admin/Orders/Details/@order.Id" class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">Заказов пока нет</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>