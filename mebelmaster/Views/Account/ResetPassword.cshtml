@{
    ViewData["Title"] = "Сброс пароля";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h2 class="text-center mb-0"><i class="fas fa-redo me-2"></i>@ViewData["Title"]</h2>
                </div>
                <div class="card-body p-4">
                    <p class="text-muted mb-4">
                        Введите ваш email и новый пароль для восстановления доступа к аккаунту.
                    </p>
                    
                    <form method="post" action="/Identity/Account/ResetPassword">
                        <input type="hidden" name="Input.Code" value="@Context.Request.Query["code"]" />
                        
                        <div class="form-group mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" name="Input.Email" class="form-control" placeholder="Введите ваш email" required />
                        </div>
                        
                        <div class="form-group mb-3">
                            <label class="form-label">Новый пароль</label>
                            <input type="password" name="Input.Password" class="form-control" placeholder="Введите новый пароль" required />
                            <div class="form-text">Пароль должен содержать минимум 6 символов</div>
                        </div>
                        
                        <div class="form-group mb-4">
                            <label class="form-label">Подтвердите пароль</label>
                            <input type="password" name="Input.ConfirmPassword" class="form-control" placeholder="Повторите новый пароль" required />
                        </div>
                        
                        <div class="form-group mb-3">
                            <button type="submit" class="btn btn-info w-100 btn-lg">
                                <i class="fas fa-save me-2"></i>Сохранить новый пароль
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>