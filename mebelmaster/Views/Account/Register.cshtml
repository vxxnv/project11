@{
    ViewData["Title"] = "Регистрация";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow register-card">
                <div class="card-header bg-success text-white">
                    <h2 class="text-center mb-0"><i class="fas fa-user-plus me-2"></i>@ViewData["Title"]</h2>
                </div>
                <div class="card-body p-4">
                    <form method="post" asp-controller="Account" asp-action="Register" id="registerForm">
                        @Html.AntiForgeryToken()
                        
                        <div class="form-group mb-3">
                            <label class="form-label fw-medium">Email</label>
                            <input type="email" name="Input_Email" class="form-control" placeholder="Введите ваш email">
                        </div>
                        
                        <div class="form-group mb-3">
                            <label class="form-label fw-medium">Пароль</label>
                            <input type="password" name="Input_Password" class="form-control" placeholder="Придумайте пароль">
                        </div>
                        
                        <div class="form-group mb-4">
                            <label class="form-label fw-medium">Подтвердите пароль</label>
                            <input type="password" name="Input_ConfirmPassword" class="form-control" placeholder="Повторите пароль">
                        </div>
                        
                        <!-- Блок для кастомных ошибок -->
                        <div id="customErrors" class="alert alert-danger d-none">
                            <h6 class="alert-heading">Ошибки в форме:</h6>
                            <div id="errorList"></div>
                        </div>
                        
                        <div class="form-group mb-3">
                            <button type="submit" class="btn btn-success w-100 btn-lg">
                                <i class="fas fa-user-plus me-2"></i>Зарегистрироваться
                            </button>
                        </div>
                        
                        <div class="text-center">
                            <p class="mb-0">
                                <a href="/Account/Login">Уже есть аккаунт? Войдите</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/account-register.js" asp-append-version="true"></script>
}