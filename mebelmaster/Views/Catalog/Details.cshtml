@model Product

@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-4">
    <!-- Хлебные крошки -->
    <nav aria-label="breadcrumb" class="product-breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Catalog">Каталог</a></li>
            <li class="breadcrumb-item"><a href="/Catalog?categoryId=@Model.CategoryId">@Model.Category.Name</a></li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Галерея изображений -->
        <div class="col-lg-6 mb-4">
            <div class="product-gallery">
                @if (Model.Images.Any())
                {
                    <div id="productCarousel" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            @for (int i = 0; i < Model.Images.Count; i++)
                            {
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <img src="@Model.Images.ElementAt(i).ImageUrl" class="d-block w-100" alt="@Model.Name">
                                </div>
                            }
                        </div>
                        @if (Model.Images.Count > 1)
                        {
                            <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon"></span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon"></span>
                            </button>
                        }
                    </div>

                    <!-- Миниатюры -->
                    <div class="product-thumbnails row mt-3 g-2">
                        @for (int i = 0; i < Model.Images.Count; i++)
                        {
                            <div class="col-3">
                                <img src="@Model.Images.ElementAt(i).ImageUrl"
                                    class="img-thumbnail @(i == 0 ? "active" : "")"
                                    alt="@Model.Name"
                                    data-bs-target="#productCarousel"
                                    data-bs-slide-to="@i">
                            </div>
                        }
                    </div>
                }
                else
                {
                    <!-- Заглушка когда нет изображений -->
                    <div class="image-placeholder product-image-placeholder rounded-3">
                        <div class="text-center">
                            <i class="fas fa-couch fa-4x mb-3"></i>
                            <p class="mb-0 fw-medium">Изображение товара</p>
                            <small class="text-muted">@Model.Name</small>
                        </div>
                    </div>
                    
                    <!-- Миниатюры-заглушки -->
                    <div class="product-thumbnails row mt-3 g-2">
                        @for (int i = 0; i < 3; i++)
                        {
                            <div class="col-3">
                                <div class="image-placeholder thumbnail-placeholder rounded-2">
                                    <i class="fas fa-couch"></i>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>

        <!-- Информация о товаре -->
        <div class="col-lg-6">
            <div class="product-info">
                <h1 class="h2 fw-bold mb-2">@Model.Name</h1>
                <p class="product-article mb-3">Артикул: @Model.Article</p>

                <div class="price-section mb-4">
                    <div class="product-price">@Model.Price.ToString("C0")</div>
                </div>

                <div class="description mb-4">
                    <h4 class="h5 fw-semibold mb-3">Описание</h4>
                    <p class="text-muted">@Model.Description</p>
                </div>

                <!-- Характеристики -->
                @if (Model.Characteristics.Any())
                {
                    <div class="characteristics mb-4">
                        <h4 class="h5 fw-semibold mb-3">Характеристики</h4>
                        <div class="table-responsive">
                            <table class="table characteristics-table">
                                <tbody>
                                    @foreach (var charact in Model.Characteristics)
                                    {
                                        <tr>
                                            <th class="border-0">@charact.Key</th>
                                            <td class="border-0">@charact.Value</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }

                <!-- Форма заявки -->
                <div class="order-form-card card">
                    <div class="card-header">
                        <h4 class="mb-0"><i class="fas fa-paper-plane me-2"></i>Оставить заявку</h4>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-controller="Catalog" asp-action="CreateOrder">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="ProductId" value="@Model.Id" />
                            
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label fw-medium">Ваше имя *</label>
                                    <input type="text" class="form-control" name="CustomerName" placeholder="Введите ваше имя" required>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-medium">Телефон *</label>
                                    <input type="tel" class="form-control" name="Phone" placeholder="+7 (XXX) XXX-XX-XX" required>
                                </div>
                                <div class="col-12">
                                    <label class="form-label fw-medium">Email</label>
                                    <input type="email" class="form-control" name="Email" placeholder="email@example.com">
                                </div>
                                <div class="col-12">
                                    <label class="form-label fw-medium">Сообщение</label>
                                    <textarea class="form-control" name="Message" placeholder="Дополнительная информация..." rows="3"></textarea>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary btn-lg w-100 py-3">
                                        <i class="fas fa-paper-plane me-2"></i>Оставить заявку
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Похожие товары -->
    @if (ViewBag.RelatedProducts != null && ((List<Product>)ViewBag.RelatedProducts).Any())
    {
        <div class="related-products mt-5 pt-4 border-top">
            <div class="row">
                <div class="col-12">
                    <h3 class="h4 fw-bold mb-4">Похожие товары</h3>
                    <div class="row g-4">
                        @foreach (var product in (List<Product>)ViewBag.RelatedProducts)
                        {
                            <div class="col-xl-3 col-lg-4 col-md-6">
                                <div class="card h-100 product-card">
                                    <div class="position-relative">
                                        @if (product.Images.Any())
                                        {
                                            <img src="@product.Images.First().ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="card-img-top image-placeholder related-product-placeholder">
                                                <div class="text-center">
                                                    <i class="fas fa-couch fa-2x mb-2"></i>
                                                    <p class="small mb-0">Нет изображения</p>
                                                </div>
                                            </div>
                                        }
                                        @if (product.IsPopular)
                                        {
                                            <span class="product-badge badge bg-warning text-dark">
                                                <i class="fas fa-fire me-1"></i>Популярный
                                            </span>
                                        }
                                    </div>
                                    <div class="card-body d-flex flex-column">
                                        <h5 class="card-title fw-semibold">@product.Name</h5>
                                        <p class="card-text text-muted flex-grow-1 small">
                                            @(product.Description.Length > 80 ? product.Description.Substring(0, 80) + "..." : product.Description)
                                        </p>
                                        <div class="mt-auto">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="h5 text-primary mb-0 fw-bold">@product.Price.ToString("C0")</span>
                                                <a href="/Catalog/Details/@product.Id" class="btn btn-outline-primary btn-sm">
                                                    Подробнее
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Активация миниатюр
        document.querySelectorAll('.img-thumbnail').forEach((thumb) => {
            thumb.addEventListener('click', function() {
                document.querySelectorAll('.img-thumbnail').forEach(t => {
                    t.classList.remove('active');
                    t.style.opacity = '0.7';
                });
                this.classList.add('active');
                this.style.opacity = '1';
            });
        });
    </script>
}