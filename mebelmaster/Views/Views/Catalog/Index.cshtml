@model CatalogViewModel

@{
    ViewData["Title"] = "Каталог продукции";
}

<div class="container mt-4">
    <div class="row">
        <!-- Сайдбар с фильтрами -->
        <div class="col-md-3">
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Категории</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a asp-action="Index"
                           asp-route-sortOrder="@Model.SortOrder"
                           asp-route-searchString="@Model.SearchString"
                           class="list-group-item list-group-item-action @(!Model.SelectedCategoryId.HasValue ? "active" : "")">
                            Все категории
                        </a>
                        @foreach (var category in Model.Categories)
                        {
                            <a asp-action="Index"
                               asp-route-categoryId="@category.Id"
                               asp-route-sortOrder="@Model.SortOrder"
                               asp-route-searchString="@Model.SearchString"
                               class="list-group-item list-group-item-action @(Model.SelectedCategoryId == category.Id ? "active" : "")">
                                @category.Name
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Основной контент -->
        <div class="col-md-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Каталог продукции</h1>
                <div class="d-flex gap-2">
                    <!-- Поиск -->
                    <form method="get" class="d-flex">
                        <input class="form-control me-2" type="search" name="searchString" value="@Model.SearchString" placeholder="Поиск...">
                        <input type="hidden" name="sortOrder" value="@Model.SortOrder">
                        <input type="hidden" name="categoryId" value="@Model.SelectedCategoryId">
                        <button class="btn btn-outline-primary" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>

                    <!-- Сортировка -->
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            Сортировка
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" asp-action="Index"
                                   asp-route-sortOrder="name"
                                   asp-route-categoryId="@Model.SelectedCategoryId"
                                   asp-route-searchString="@Model.SearchString">По названию (А-Я)</a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-action="Index"
                                   asp-route-sortOrder="name_desc"
                                   asp-route-categoryId="@Model.SelectedCategoryId"
                                   asp-route-searchString="@Model.SearchString">По названию (Я-А)</a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-action="Index"
                                   asp-route-sortOrder="price"
                                   asp-route-categoryId="@Model.SelectedCategoryId"
                                   asp-route-searchString="@Model.SearchString">По цене (возрастание)</a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-action="Index"
                                   asp-route-sortOrder="price_desc"
                                   asp-route-categoryId="@Model.SelectedCategoryId"
                                   asp-route-searchString="@Model.SearchString">По цене (убывание)</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

        <!-- Товары -->
        <div class="catalog-grid">
            <div class="row g-4">
                @foreach (var product in Model.Products)
                {
                    <div class="col-xl-4 col-lg-6">
                        <div class="card product-card h-100">
                            <div class="position-relative">
                                @if (product.Images.Any())
                                {
                                    <img src="@product.Images.First().ImageUrl" class="card-img-top" alt="@product.Name">
                                }
                                else
                                {
                                    <div class="card-img-top image-placeholder card-image-placeholder">
                                        <div class="text-center">
                                            <i class="fas fa-couch fa-3x mb-2"></i>
                                            <p class="mb-0 fw-medium">@product.Name</p>
                                        </div>
                                    </div>
                                }
                                @if (product.IsPopular)
                                {
                                    <span class="product-badge badge bg-warning text-dark">
                                        <i class="fas fa-fire me-1"></i>Популярный
                                    </span>
                                }
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-semibold">@product.Name</h5>
                                <p class="card-text text-muted flex-grow-1">
                                    @(product.Description.Length > 100 ? product.Description.Substring(0, 100) + "..." : product.Description)
                                </p>
                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="h5 text-primary mb-0 fw-bold">@product.Price.ToString("C0")</span>
                                        <a href="/Catalog/Details/@product.Id" class="btn btn-primary">
                                            <i class="fas fa-eye me-1"></i>Подробнее
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

            <!-- Пагинация -->
            @if (Model.PageViewModel.TotalPages > 1)
            {
                <nav>
                    <ul class="pagination justify-content-center">
                        @if (Model.PageViewModel.HasPreviousPage)
                        {
                            <li class="page-item">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-page="@(Model.PageViewModel.CurrentPage - 1)"
                                   asp-route-categoryId="@Model.SelectedCategoryId"
                                   asp-route-sortOrder="@Model.SortOrder"
                                   asp-route-searchString="@Model.SearchString">Назад</a>
                            </li>
                        }

                        @for (int i = 1; i <= Model.PageViewModel.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.PageViewModel.CurrentPage ? "active" : "")">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-page="@i"
                                   asp-route-categoryId="@Model.SelectedCategoryId"
                                   asp-route-sortOrder="@Model.SortOrder"
                                   asp-route-searchString="@Model.SearchString">@i</a>
                            </li>
                        }

                        @if (Model.PageViewModel.HasNextPage)
                        {
                            <li class="page-item">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-page="@(Model.PageViewModel.CurrentPage + 1)"
                                   asp-route-categoryId="@Model.SelectedCategoryId"
                                   asp-route-sortOrder="@Model.SortOrder"
                                   asp-route-searchString="@Model.SearchString">Вперед</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>