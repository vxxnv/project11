@model HomeViewModel

@{
    ViewData["Title"] = "Главная";
}

<!-- Герой-секция -->
<section class="hero-section min-vh-100 d-flex align-items-center" style="background: linear-gradient(135deg, #0d6efd 0%, #2a5298 100%);">
    <div class="container">
        <div class="row justify-content-center text-center text-white">
            <div class="col-lg-8">
                <h1 class="display-3 fw-bold mb-4">Мебель на заказ от производителя</h1>
                <p class="lead mb-5 fs-4 opacity-90">Создаем качественную мебель по индивидуальным проектам. Более 10 лет на рынке.</p>
                
                <div class="d-flex flex-wrap gap-3 justify-content-center mb-5">
                    <a href="/Catalog" class="btn btn-light btn-lg px-5 py-3 fw-bold text-primary">
                        <i class="fas fa-couch me-2"></i>Смотреть каталог
                    </a>
                    <a href="/Home/Contacts" class="btn btn-outline-light btn-lg px-5 py-3 fw-bold">
                        <i class="fas fa-phone me-2"></i>Бесплатная консультация
                    </a>
                </div>
                
                <div class="row justify-content-center g-4 mt-4">
                    <div class="col-lg-4 col-md-4">
                        <div class="d-flex align-items-center justify-content-center p-3 bg-white bg-opacity-10 rounded-3">
                            <i class="fas fa-shield-alt text-warning me-3 fa-2x"></i>
                            <div class="text-start">
                                <div class="fw-bold fs-5">Гарантия 3 года</div>
                                <small class="opacity-90">На всю продукцию</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4">
                        <div class="d-flex align-items-center justify-content-center p-3 bg-white bg-opacity-10 rounded-3">
                            <i class="fas fa-ruler-combined text-warning me-3 fa-2x"></i>
                            <div class="text-start">
                                <div class="fw-bold fs-5">Бесплатный замер</div>
                                <small class="opacity-90">С выездом на дом</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4">
                        <div class="d-flex align-items-center justify-content-center p-3 bg-white bg-opacity-10 rounded-3">
                            <i class="fas fa-industry text-warning me-3 fa-2x"></i>
                            <div class="text-start">
                                <div class="fw-bold fs-5">Собственное производство</div>
                                <small class="opacity-90">Контроль качества</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Стрелка для скролла вниз -->
    <div class="position-absolute bottom-0 start-50 translate-middle-x mb-4">
        <a href="#popular-products" class="text-white text-decoration-none">
            <div class="d-flex flex-column align-items-center">
                <span class="small opacity-75 mb-2">Узнать больше</span>
                <i class="fas fa-chevron-down fa-lg opacity-75"></i>
            </div>
        </a>
    </div>
</section>

<!-- Популярные товары -->
<section class="popular-products py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title">Популярные товары</h2>
            <p class="section-subtitle text-muted">Самые востребованные модели мебели</p>
        </div>
        
        @if (Model.PopularProducts.Any())
        {
            <div class="row g-4">
                @foreach (var product in Model.PopularProducts)
                {
                    <div class="col-xl-3 col-lg-4 col-md-6">
                        <div class="card product-card h-100 border-0 shadow-sm">
                            <div class="card-img-container position-relative">
                                @if (product.Images.Any())
                                {
                                    <img src="@product.Images.First().ImageUrl" class="card-img-top" alt="@product.Name" style="height: 220px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="card-img-top image-placeholder card-image-placeholder">
                                        <div class="text-center">
                                            <i class="fas fa-couch fa-3x mb-2"></i>
                                            <p class="mb-0 fw-medium">@product.Name</p>
                                        </div>
                                    </div>
                                }
                                @if (product.IsPopular)
                                {
                                    <span class="position-absolute top-0 start-0 m-2 badge bg-warning text-dark">
                                        <i class="fas fa-fire me-1"></i>Популярный
                                    </span>
                                }
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-semibold">@product.Name</h5>
                                <p class="card-text text-muted flex-grow-1">@(product.Description.Length > 100 ? product.Description.Substring(0, 100) + "..." : product.Description)</p>
                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="h5 text-primary mb-0 fw-bold">@product.Price.ToString("C0")</span>
                                        <a href="/Catalog/Details/@product.Id" class="btn btn-outline-primary btn-sm">
                                            Подробнее
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            
            <div class="text-center mt-5">
                <a href="/Catalog" class="btn btn-primary btn-lg px-5">
                    <i class="fas fa-list me-2"></i>Смотреть весь каталог
                </a>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-couch fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">Популярные товары появятся скоро</h4>
                <p class="text-muted">Мы готовим для вас лучшие модели мебели</p>
                <a href="/Catalog" class="btn btn-primary mt-3">
                    <i class="fas fa-list me-2"></i>Перейти в каталог
                </a>
            </div>
        }
    </div>
</section>

<!-- Преимущества -->
<section class="advantages py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title">Почему выбирают нас</h2>
            <p class="section-subtitle text-muted">Наши ключевые преимущества</p>
        </div>
        
        <div class="row g-4">
            <div class="col-lg-3 col-md-6">
                <div class="advantage-card text-center p-4 h-100">
                    <div class="advantage-icon mb-3">
                        <i class="fas fa-cogs fa-3x text-primary"></i>
                    </div>
                    <h5 class="fw-bold">Современное оборудование</h5>
                    <p class="text-muted">Используем новейшие станки ЧПУ для точного производства</p>
                </div>
            </div>
            
            <div class="col-lg-3 col-md-6">
                <div class="advantage-card text-center p-4 h-100">
                    <div class="advantage-icon mb-3">
                        <i class="fas fa-tree fa-3x text-success"></i>
                    </div>
                    <h5 class="fw-bold">Качественные материалы</h5>
                    <p class="text-muted">Работаем только с проверенными поставщиками материалов</p>
                </div>
            </div>
            
            <div class="col-lg-3 col-md-6">
                <div class="advantage-card text-center p-4 h-100">
                    <div class="advantage-icon mb-3">
                        <i class="fas fa-user-tie fa-3x text-info"></i>
                    </div>
                    <h5 class="fw-bold">Опытные мастера</h5>
                    <p class="text-muted">Команда профессионалов с опытом работы более 10 лет</p>
                </div>
            </div>
            
            <div class="col-lg-3 col-md-6">
                <div class="advantage-card text-center p-4 h-100">
                    <div class="advantage-icon mb-3">
                        <i class="fas fa-truck fa-3x text-warning"></i>
                    </div>
                    <h5 class="fw-bold">Доставка и сборка</h5>
                    <p class="text-muted">Бесплатная доставка и профессиональная сборка</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Отзывы -->
<section class="reviews py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title">Отзывы наших клиентов</h2>
            <p class="section-subtitle text-muted">Что говорят о нас клиенты</p>
        </div>
        
        @if (Model.Reviews.Any())
        {
            <div class="row g-4">
                @foreach (var review in Model.Reviews)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="card review-card h-100 border-0 shadow-sm">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <h6 class="card-title mb-1 fw-semibold">@review.CustomerName</h6>
                                        <small class="text-muted">@review.CreatedAt.ToString("dd.MM.yyyy")</small>
                                    </div>
                                    <div class="rating">
                                        @for (int i = 0; i < review.Rating; i++)
                                        {
                                            <i class="fas fa-star text-warning small"></i>
                                        }
                                        @for (int i = review.Rating; i < 5; i++)
                                        {
                                            <i class="fas fa-star text-muted small"></i>
                                        }
                                    </div>
                                </div>
                                <p class="card-text">@review.Text</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-comments fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Отзывов пока нет</h5>
                <p class="text-muted">Станьте первым, кто оставит отзыв о нашей работе</p>
                <a href="/Home/Contacts" class="btn btn-outline-primary">
                    <i class="fas fa-pencil-alt me-2"></i>Оставить отзыв
                </a>
            </div>
        }
    </div>
</section>

<!-- Форма быстрой заявки -->
<section class="quick-order py-5 bg-primary text-white">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <h3 class="fw-bold mb-3">Оставьте заявку на бесплатный расчет</h3>
                <p class="mb-0 opacity-75">Наш менеджер свяжется с вами в течение 15 минут для консультации</p>
            </div>
            <div class="col-lg-6">
                <form method="post" action="/Home/SubmitOrder" class="bg-white rounded-3 p-4 shadow">
                    @Html.AntiForgeryToken()
                    <div class="row g-3">
                        <div class="col-md-6">
                            <input type="text" class="form-control" placeholder="Ваше имя" name="CustomerName" required>
                        </div>
                        <div class="col-md-6">
                            <input type="tel" class="form-control" placeholder="Телефон" name="Phone" required>
                        </div>
                        <div class="col-12">
                            <textarea class="form-control" placeholder="Сообщение (необязательно)" name="Message" rows="3"></textarea>
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary w-100 btn-lg">
                                <i class="fas fa-paper-plane me-2"></i>Отправить заявку
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        
        // Анимация появления элементов при скролле
        document.addEventListener('DOMContentLoaded', function() {
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };
            
            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, observerOptions);
            
            // Анимируем карточки товаров
            document.querySelectorAll('.product-card, .advantage-card, .review-card').forEach(card => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                card.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                observer.observe(card);
            });
        });
    </script>
}